
      <div class="col-md-4">
        <div class="container text-center">
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <div class="card-image">
                <figure class="image">
                  <%= image_tag product.image.variant(resize_to_limit:[250,250]) %>
                </figure>
              </div>
            <%end %>
            <h4><%= product.name %></h4>
          <% end %>
        </div>
      </div>
