
<figure class="text-center">
  <h1>Welcome to Poke Central!</h1>
  <p>We throw cards, you catch 'em all</p>
</figure>
<div class="container">
  <details>
    <summary>Shopping Cart</summary>
    <% if @cart.empty? %>
      <p>Your cart is empty</p>
    <% else %>
      <ul>
        <% @cart.each do |product| %>
          <li><%= product.name %></li>
        <% end %>
      </ul>
    <% end %>
  </details>
</div>
<div class="container">
  <div class="row align-items-center">
    <% @products.each do |product|%>
      <div class="col-md-4">
        <div class="container text-center">
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <div class="card-image">
                <figure class="image">
                  <%= image_tag product.image.variant(resize_to_limit:[250,250]) %>
                </figure>
              </div>
            <% end %>
            <h4><%= product.name %></h4>
            <p><%= number_to_currency(product.price) %></p>
          <% end %>
          <% if @cart.include?(product) %>
              <p><%= button_to 'Remove from cart', remove_from_cart_path(product.id), method: :delete, params: { id: product.id } %></p>
              <% else%>
              <p><%= button_to 'Add to cart', add_to_cart_path(product.id), method: :post %></p>
              <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<nav aria-label="Page navigation example">
  <ul class="pagination">
    <% if @products.prev_page %>
      <li class="page-item">
        <%= link_to "Previous", request.params.merge(page: @products.prev_page), class: "page-link" %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
      </li>
    <% end %>
    <% @products.total_pages.times do |i| %>
      <% if @products.current_page == i + 1 %>
        <li class="page-item active" aria-current="page">
          <a class="page-link" href="#"><%= i + 1 %></a>
        </li>
      <% else %>
        <li class="page-item">
          <%= link_to i + 1, request.params.merge(page: i + 1), class: "page-link" %>
        </li>
      <% end %>
    <% end %>
    <% if @products.next_page %>
      <li class="page-item">
        <%= link_to "Next", request.params.merge(page: @products.next_page), class: "page-link" %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
      </li>
    <% end %>
    <li class="page-item">
      <%= link_to "Last", request.params.merge(page: @products.total_pages), class: "page-link" %>
    </li>
  </ul>
</nav>