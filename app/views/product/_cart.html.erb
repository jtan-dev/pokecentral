<div class="container">
  <details>
    <summary>Shopping Cart</summary>
    <% if cart.empty? %>
      <p>Your cart is empty</p>
    <% else %>
      <ul>
        <% cart.each do |product| %>
          <li><%= link_to product.name, product_path(product) %></li>
        <% end %>
        <li><%= button_to 'Buy now', checkout_create_path, method: :post, params: {cart: cart} %></li>
      </ul>
    <% end %>
  </details>
</div>